{# Email para el reseteo de contrasennas #}

{% trans_default_domain 'FOSUserBundle' %}
{% block subject %}
    {%- autoescape false -%}
    {{ 'resetting.email.subject' | trans({}, 'FOSUserBundle') }}
    {%- endautoescape -%}
{% endblock %}

{% block body_text %}{% endblock %}

{% block body_html %}
    {% embed 'layout/email.html.twig' %}
        {% block body %}
            <br/>
            {{ 'resetting.email.message' | trans({'%username%': user.username, '%confirmationUrl%': '<br/><a href="'~confirmationUrl~'">'~confirmationUrl~'</a><br/>'}, 'FOSUserBundle') | raw | nl2br}}
            <br/>
        {% endblock %}
    {% endembed %}
{% endblock %}
