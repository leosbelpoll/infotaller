{% extends "@FOSUser/layout.html.twig" %}

{% block fos_user_content %}
    {% trans_default_domain 'FOSUserBundle' %}
    {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset form-centro' } }) }}
    <div class="lista-errores">
        {{ form_errors(form.plainPassword.first) }}
        {{ form_errors(form.plainPassword.second) }}
    </div>
    {{ form_label(form.plainPassword.first)}}
    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'autofocus':'' }}) }}
    <br/>
    {{ form_label(form.plainPassword.second) }}
    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control' }}) }}
    <br/>
    <div>
        <input type="submit" value="{{ 'resetting.reset.submit'|trans }}" class="btn btn-lg btn-primary btn-block"/>
    </div>
    {{ form_end(form) }}
{% endblock fos_user_content %}


